<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Heebo', Arial, sans-serif;
            direction: rtl;
            text-align: right;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: auto;
            page-break-before: always;
        }

        .product-container {
            page-break-inside: avoid;
            margin-bottom: 20px;
        }

        .details {
            margin-top: 15px;
            margin-bottom: 10px;
            font-size: 15px;
            font-weight: bold;
        }

        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
            margin-bottom: 20px;
            margin-top: 20px;
            display: flex;
            align-items: center;
            page-break-inside: avoid;
            height: 300px;
            overflow: hidden;
        }

        .premium-card {
            box-shadow: 0 0 3px 3px rgb(111, 124, 144) !important;
        }

        .card:first-of-type {
            padding-top: 20px;
        }

        .card img {
            width: 33%;
            height: 260px;
            border-radius: 8px;
            margin-left: 20px;
            object-fit: contain;
            flex-shrink: 0;
        }

        .card h2 {
            margin: 0 0 10px;
            font-size: 18px;
        }

        .card p {
            margin: 5px 0;
            font-size: 14px;
        }

        .card:nth-child(3n+1) {
            page-break-before: auto;
            padding-top: 20px;
        }

        .card:nth-child(3n) {
            page-break-after: always;
        }

        .card:last-child {
            page-break-after: avoid;
        }

        .title {
            text-align: center;
            margin-top: 20px;
        }


        .user-info h4 {
            margin-bottom: 8px;
        }

        .user-info p {
            margin: 5px 0;
        }

        .user-info i {
            font-size: 12px;
            margin-left: 10px;
        }

        p {
            line-height: 1.2;
            font-size: 12px;
        }

        .card-content {
            flex: 1;
            overflow-y: auto;
            height: 100%;
        }
    </style>
</head>

<body>
    <div class="container">
        {{#if products.length}}
        {{#each products}}
        <div class="card {{#if isPremiumAd}}premium-card{{/if}}">
            <img src="{{primaryImage}}" alt="{{note}}" style="max-width: 100%; height: auto; object-fit: contain;">
            <div>
                <div class="details"><i class="fas fa-scroll"></i> פרטי המגילה:</div>
                <p><span class="label">סוג המגילה:</span> {{scriptType}}</p>
                <p><span class="label">סוג כתב:</span> {{scrollType}}</p>
                <p><span class="label">מחיר:</span> {{price}} ₪</p>
                <p>{{note}}</p>
                <div class="details"><i class="fas fa-user"></i> פרטי המוכר:</div>
                <p><span class="label">שם מלא:</span> {{user.fullName}}</p>
                <p><span class="label">אימייל:</span> {{user.email}}</p>
                <p><span class="label">טלפון:</span> {{user.phoneNumber}}</p>
                <p><span class="label">עיר:</span> {{user.city}}</p>
            </div>
        </div>
        {{/each}}
        {{else}}
        <p style="text-align: center; font-size: 20px; margin-top: 50px;">אין עדיין מגילות</p>
        {{/if}}
    </div>
</body>

</html>